<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>cities</servlet-name>
        <servlet-class>Servlets.cities</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>countries</servlet-name>
        <servlet-class>Servlets.countries</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCity</servlet-name>
        <servlet-class>Servlets.addCity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCountry</servlet-name>
        <servlet-class>Servlets.addCountry</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteCity</servlet-name>
        <servlet-class>Servlets.deleteCity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteCountry</servlet-name>
        <servlet-class>Servlets.deleteCountry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cities</servlet-name>
        <url-pattern>/cities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>countries</servlet-name>
        <url-pattern>/countries</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCity</servlet-name>
        <url-pattern>/addCity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCountry</servlet-name>
        <url-pattern>/addCountry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteCity</servlet-name>
        <url-pattern>/deleteCity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteCountry</servlet-name>
        <url-pattern>/deleteCountry</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>pages/main.jsp</welcome-file>
    </welcome-file-list>
</web-app>
